{
  "name": "HiFiNi Lyric Extensions",
  "description": "HiFiNi Music BBS Lyrics Extension - HiFiNi.COM",
  "version": "0.0.1",
  "manifest_version": 3,
  "permissions": ["scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["https://www.hifini.com/thread*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "action": {
    "default_icon": "logo.png"
  }
}
